<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/AVT_Lop"
            android:layout_width="80dp"
            android:layout_height="121dp"
            android:src="@drawable/lop" />

        <LinearLayout
            android:layout_width="282dp"
            android:layout_height="136dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/item_tenlop"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="Tên Lớp"
                android:textColor="#ff3a3a"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/item_Malop"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="13352"
                android:textColor="#000000"
                android:textSize="18sp" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/item_delete_ds_lop"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icondelete" />

                <ImageView
                    android:id="@+id/item_edit_ds_lop"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/edit" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>